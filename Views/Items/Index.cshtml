@model IEnumerable<Mercer_Craigslist.Models.Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Items</h2>
<p>
    <!-- Helper Method -->
    @Html.ActionLink("Add Item", "New")
</p>
<ul>
    @foreach (var item in Model)
    {
        <li class="item-blurb">
            <img src="@Url.Content(item.ImagePath)" width="100"/>
            @item.Title (@item.Category) 
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
         </li>
    }
</ul>
