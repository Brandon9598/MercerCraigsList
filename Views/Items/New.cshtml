@model Mercer_Craigslist.Models.Item
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
<!-- Helper Method -->
@using (Html.BeginForm("Add", "Items", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cost)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="OwnerEmail">Contact Email</label>
        @Html.TextAreaFor(m => m.OwnerEmail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Save" />
}
