@model Mercer_Craigslist.Models.Item
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<div class="Cost">
    <h3>Price</h3>
    <p>@Model.Cost</p>
</div>

<div class="Description">
    <h3>Description</h3>
    <p>@Model.Description</p>
</div>

<div class="Contact">
    <h3>Contact Info</h3>
    <p>@Model.OwnerEmail</p>
</div>

